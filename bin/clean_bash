#!/bin/bash

PYDIR=$INSTALLPATH_ROOT/python/3.7.9/gnu/9.1.0/bin
SPACK_STARTUP=$(readlink -f $(dirname $(which spack))/../share/spack/setup-env.sh)

exec env -i USER=$USER HOME=$HOME TERM=$TERM PATH=$PYDIR:/usr/local/bin:/usr/bin:/bin TMPDIR=$TMPDIR SPACK_DISABLE_LOCAL_CONFIG=true /bin/bash --noprofile --rcfile $SPACK_STARTUP $@
