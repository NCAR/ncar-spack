if [[ -f $root/bin/flang ]]; then
    flang_path=$root/bin/flang
else
    flang_path=None
fi

cat << EOF
  - compiler:
      spec: $comp_spec 
      paths:
        cc: $root/bin/clang
        cxx: $root/bin/clang
        f77: $flang_path
        fc: $flang_path
      operating_system: $os
      modules: []
EOF

if [[ $install_modifier == cray ]]; then
cray_libfabric_root=${cray_libfabric_root:-$(spack location -i libfabric %gcc)}

cat << EOF
        append_path:
          LD_LIBRARY_PATH: $cray_libfabric_root/lib64
EOF
fi
